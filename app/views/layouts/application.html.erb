<!DOCTYPE html>
<html>
  <head>
    <title>Debateapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
  </head>

  <body>
   <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
        
          <%= link_to root_path, class: "navbar-brand" do %>
            Chat
          <% end %>
        </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav"></ul>
       
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
        <%= yield :right_nav %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%=current_user.email %>
              <li><%= link_to "Edit User", edit_user_registration_path%></li>
              <li role = "separator" class="divider"><li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign_up", new_user_registration_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class = "fluid container" style="margin-top: 70px">
  <div class = "row">
    <div class ="col-sm-2" >
      <% if user_signed_in? %>
        <h5>Chatrooms</h5>
        <ul>
          <% current_user.chatrooms.each do |chatroom| %>
            <li><%= link_to chatroom.name, chatroom %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <div class = "col-sm10">
      <%= yield %>
    </div>
  </div>
</div>


  </body>
</html>
























